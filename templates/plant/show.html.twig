{% extends 'base.html.twig' %}

{% block title %}Plant{% endblock %}

{% block body %}
    <h1>{{ 'plant'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ plant.id }}</td>
            </tr>
            <tr>
                <th>{{ 'common_name'|trans }}</th>
                <td>{{ plant.commonName }}</td>
            </tr>
            <tr>
                <th>{{ 'scientific_name'|trans }}</th>
                <td>{{ plant.scientificName }}</td>
            </tr>
            <tr>
                <th>{{ 'description'|trans }}</th>
                <td>{{ plant.description }}</td>
            </tr>
            <tr>
                <th>{{ 'image'|trans }}</th>
                <td>{{ plant.image }}</td>
            </tr>
            <tr>
                <th>{{ 'cycle'|trans }}</th>
                <td>{{ plant.cycle }}</td>
            </tr>
            <tr>
                <th>{{ 'hardiness_zone'|trans }}</th>
                <td>{{ plant.hardinessZone }}</td>
            </tr>
            <tr>
                <th>{{ 'maintenance_difficulty'|trans }}</th>
                <td>{{ plant.maintenanceDifficulty }}</td>
            </tr>
            <tr>
                <th>{{ 'watering_needs'|trans }}</th>
                <td>{{ plant.wateringNeeds }}</td>
            </tr>
            <tr>
                <th>{{ 'soil_type'|trans }}</th>
                <td>{{ plant.soilType }}</td>
            </tr>
            <tr>
                <th>{{ 'flowering_season'|trans }}</th>
                <td>{{ plant.floweringSeason }}</td>
            </tr>
            <tr>
                <th>{{ 'created_at'|trans }}</th>
                <td>{{ plant.createdAt ? plant.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_plant_index') }}">{{ 'back_to_list'|trans }}</a>

    <a href="{{ path('app_plant_edit', {'id': plant.id}) }}">{{ 'edit'|trans }}</a>

    {{ include('plant/_delete_form.html.twig') }}
{% endblock %}
